<h1>投稿</h1>
<h3>新規投稿ページ</h3>
<%= form_for @tweet do |f| %>


  <div class="field">
    <%= f.label :部位の名前%>
    <%= f.text_field :tweet_name, :size => 30 %>
  </div>




  <div class="field">
    <%= f.label :メニュー  %>
    <%= f.text_area :menue, :size => "30x2" %>
  </div>

  <div class="field">
    <%= f.label :メニューの詳細 %>
    <%= f.text_area :detail, :size => "30x2" %>
  </div>


  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", tweets_path %>